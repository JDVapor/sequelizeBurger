<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{title}}</h1>
        <h3>Create and Devour Burgers!</h3>


        <div class="eatBurger">
          <h5>Burgers ready to be eaten:</h5>
          <ul>
            {{#each burgers}}
              {{#unless this.devoured}}
                <li>
                  {{this.burger_name}}
                  <form>
                    <input id="id" type="hidden" name="devoured" value="{{this.id}}">
                    <button id="devour" type="submit">Devour It!</button>
                  </form>

                </li>
              {{/unless}}
            {{/each}}
          </ul>
        </div>

        <div class="devouredBurgers">
          <h5>Burgers already devoured!</h5>
          <ul>
            {{#each burgers}}
              {{#if this.devoured}}
                <li>
                  {{this.burger_name}}
                </li>
              {{/if}}
            {{/each}}
          </ul>
        </div>

        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="burger-text">Create a Burger</label>
            <input type="text" id="burger-text" class="form-control" aria-describedby="burger-text" placeholder="Enter Burger Text">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>

      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
